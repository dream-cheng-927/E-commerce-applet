.userinfo-box {
  display: flex;
  align-items: center;
  padding: 10px;
  background-color: #c82523;
}
.userinfo-box .avatar {
  width: 50px;
  height: 50px;
  border-radius: 50px;
  border: 4px solid #fff;
}
.userinfo-box .nickname {
  margin-left: 10px;
  color: #fff;
  font-size: 16px;
  font-weight: bold;
}
.panel1 {
  display: flex;
  width: 100%;
  margin-bottom: 20px;
  background-color: #fff;
}
.panel1 .item {
  display: flex;
  width: 20%;
  height: 60px;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  font-size: 12px;
  color: #686868;
}
.panel1 .item .icon {
  width: 24px;
  height: 24px;
}
.panel2 {
  display: flex;
  flex-wrap: wrap;
  width: 700rpx;
  margin: 20px auto;
  border-radius: 10px;
  background-color: #fff;
}
.panel2 .item {
  display: flex;
  width: 25%;
  height: 60px;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  font-size: 12px;
  color: #686868;
}
.panel2 .item .icon {
  width: 24px;
  height: 24px;
}

